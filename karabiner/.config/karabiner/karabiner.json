{
    "global": { "enable_notification_window": false },
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Comma key: tap for ',' ; hold for Right Shift",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "comma",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [
                                    {
                                        "key_code": "right_shift",
                                        "lazy": true
                                    }
                                ],
                                "to_if_alone": [{ "key_code": "comma" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Ctrl+W → delete previous word (except in terminals)",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.mitchellh\\.ghostty$",
                                            "^com\\.apple\\.Terminal$",
                                            "^com\\.googlecode\\.iterm2$",
                                            "^dev\\.astro\\.Warp$",
                                            "^org\\.alacritty$",
                                            "^net\\.kovidgoyal\\.kitty$"
                                        ],
                                        "type": "frontmost_application_unless"
                                    }
                                ],
                                "from": {
                                    "key_code": "w",
                                    "modifiers": {
                                        "mandatory": ["control"],
                                        "optional": ["any"]
                                    }
                                },
                                "to": [
                                    {
                                        "key_code": "delete_or_backspace",
                                        "modifiers": ["left_option"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Ctrl+J → Enter (everywhere except Ghostty terminal)",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.mitchellh\\.ghostty$",
                                            "^net\\.kovidgoyal\\.kitty$"
                                        ],
                                        "type": "frontmost_application_unless"
                                    }
                                ],
                                "from": {
                                    "key_code": "j",
                                    "modifiers": {
                                        "mandatory": ["control"],
                                        "optional": ["any"]
                                    }
                                },
                                "to": [{ "key_code": "return_or_enter" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Left Shift sends Backspace when tapped, acts as Shift when held",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "left_shift",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [{ "key_code": "left_shift" }],
                                "to_if_alone": [{ "key_code": "delete_or_backspace" }],
                                "to_if_held_down": [{ "key_code": "left_shift" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Emacs-like keybindings in Slack (Ctrl+P/N for arrows)",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.tinyspeck\\.slackmacgap$"
                                        ],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": {
                                    "key_code": "p",
                                    "modifiers": { "mandatory": ["control"] }
                                },
                                "to": [{ "key_code": "up_arrow" }],
                                "type": "basic"
                            },
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.tinyspeck\\.slackmacgap$"
                                        ],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": {
                                    "key_code": "n",
                                    "modifiers": { "mandatory": ["control"] }
                                },
                                "to": [{ "key_code": "down_arrow" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Remap Cmd + P to Back in Firefox",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^org\\.mozilla\\.firefox$"
                                        ],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": {
                                    "key_code": "p",
                                    "modifiers": { "mandatory": ["command"] }
                                },
                                "to": [
                                    {
                                        "key_code": "open_bracket",
                                        "modifiers": ["command"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Change caps_lock to left_control if pressed with other keys, change caps_lock to escape if pressed alone.",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [{ "key_code": "left_control" }],
                                "to_if_alone": [{ "key_code": "escape" }],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "devices": [
                {
                    "identifiers": {
                        "is_keyboard": true,
                        "product_id": 41421,
                        "vendor_id": 1241
                    },
                    "simple_modifications": [
                        {
                            "from": { "key_code": "left_command" },
                            "to": [{ "key_code": "left_option" }]
                        },
                        {
                            "from": { "key_code": "left_option" },
                            "to": [{ "key_code": "left_command" }]
                        }
                    ]
                },
                {
                    "identifiers": {
                        "is_pointing_device": true,
                        "product_id": 50475,
                        "vendor_id": 1133
                    },
                    "ignore": false
                }
            ],
            "name": "Default profile",
            "selected": true,
            "virtual_hid_keyboard": {
                "indicate_sticky_modifier_keys_state": false,
                "keyboard_type_v2": "ansi"
            }
        }
    ]
}